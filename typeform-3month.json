  "fields": [
    {
      "type": "opinion_scale",
      "title": "Overall, how satisfied are you with Telegraph?",
      "properties": {
        "steps": 10,
        "start_at_one": true,
        "labels": {
          "left": "Very Dissatisfied",
          "right": "Very Satisfied"
        }
      },
      "validations": {"required": true}
    },
    {
      "type": "opinion_scale",
      "title": "How likely are you to recommend Telegraph to other rail shippers?",
